  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(cart.total_price, :unit => "&pound;") %></td>
    <!-- Add Â£ to the total price by using number_to_currency method-->

  </tr>

</table>
<table>
  <tr>
    <td><%= button_to "Checkout" , new_order_path, :method => :get, :class => 'btn btn-success btn-mini' %></td>
