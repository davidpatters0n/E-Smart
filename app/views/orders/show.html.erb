<table style="float: left;" xmlns="http://www.w3.org/1999/html">
  <tr>
    <td class="th" colspan=2>Order Details</td>
  </tr>
  <tr>
    <td><b>First Name</b></td>
    <td><%= @order.first_name %></td>
  </tr>
  <tr>
    <td><b>Last Name</b></td>
    <td><%= @order.last_name %></td>
  </tr>
  <tr>
    <td><b>Email</b></td>
    <td><%= @order.email %></td>
  </tr>
  <tr>
    <td><b>Address</b></td>
    <td><%= @order.address %></td>
  </tr>
  <tr>
    <td><b>Card Type</b></td>
    <td><%= @order.card_type %></td>
  </tr>
  <tr>
    <td><b>Ip Address</b></td>
    <td><%= @order.ip_address %></td>
  </tr>
  <tr>
    <td><%= link_to 'Edit', edit_order_path(@order) %> |
      <%= link_to 'Back', orders_path %></td>
  </tr>

  <table style="float: left; margin-left: 20px;">
      <caption><b>Products Details</b></caption>
    <thead>
     <tr>
      <th>Order Date</th>
      <th>Quantity</th>
      <th>Product</th>
      <th>Total</th>
     </tr>
    </thead>
    <% @order.line_items.each do |item| %>
    <tr>
      <td><%= item.created_at.to_s(:short) %></td>
      <td><%= item.quantity %></td>
      <td><%= item.product.title %></td>
      <td><%= number_to_currency(item.total_price, :unit => "Â£") %></td>
    </tr>
    </table>
    </table>
         <% end  %>

