<!--Form is automatically generated when the 'rails scaffold' command is executed. -->

<h1>Editing order</h1>

<%= form_for(@order) do |f| %>
    <% if @order.errors.any? %>    <!--Checks if any errors exisst. If so then display error message-->
        <div id="error_explanation">
          <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>
          <ul>
            <% @order.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name %>
    </div>
    <div class="field">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name %>
    </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email, :placeholder => "example@example.com" %>
    </div>
    <div class="field">
      <%= f.label :address %><br />
      <%= f.text_area :address, :rows => 3, :cols => 40 %>
    </div>

    <div class="field">
      <%= f.label :status %><br />
      <%= f.select :status, Order::STATUS %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>


<%= link_to 'Show', @order %> |
