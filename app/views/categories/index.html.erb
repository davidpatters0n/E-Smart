<!--Basic standard generated view when 'rails generate scaffold command is ran-->

<h1>Listing categories</h1>

<table class="table table-striped table-bordered">
 <thead>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
<tbody>
<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= link_to 'Show', category, :class => 'btn btn-mini' %></td>
    <td><%= link_to 'Edit', edit_category_path(category), :class => 'btn btn-mini' %></td>
    <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, :class =>  'btn btn-mini btn-danger' %></td>
  </tr>
     <% end %>
  </tbody>
</table>

<%= link_to 'New Category', new_category_path, :class => 'btn btn-primary' %>

