<%= form_for(@user) do |f| %>
<table style="float: left;" xmlns="http://www.w3.org/1999/html">
  <tr>
    <td class="th" colspan=2>Login Details</td>
  </tr>
  <tr>
    <% if @user.id %>
        <td><%= f.label :id %></td>
        <td><%= @user.id %></td>
    <% end %>
  </tr>
  <tr>
    <td><%= f.label :current_sign_in_at, "Sign in time" %></td>
    <td><%= @user.current_sign_in_at.nil? ? "Not signed in" :
                    @user.current_sign_in_at.strftime('%d-%b-%Y %H:%M:%S') %></td>
  </tr>
  <tr>
    <td><%= f.label :first_name, "First Name" %></td>
    <td><%= @user.first_name %></td>
  </tr>
  <tr>
    <td><%= f.label :last_name, "Last Name" %></td>
    <td><%= @user.last_name %></td>
  </tr>
  <tr>
    <td><%= f.label :email, "Email Address" %></td>
    <td><%= @user.email %></td>
  </tr>
  <% if can? :manage, :all %>
  <tr>
    <td class="th" colspan=2>Roles and Privileges</td>
  </tr>
  <tr>

        <% for role in Role.all %>
            <td><%= role.name %><%= check_box_tag "user[role_ids][]", role.id, @user.roles.include?(role), :disabled => true %></td>
        <% end %>
        </tr>
    <% end %>
    <tr>
    <td>

      <%= link_to 'Edit', edit_user_path(@user) %> |
      <%= link_to 'Back', usermanagement_path %>

    </td>
    </tr>
  <table style="float: left; margin-left: 20px;">
    <% if @user == current_user %>
        <caption><b> My Orders</b> </caption>
        <thead>
        <tr>
          <th>Order Date</th>
          <th>Product</th>
          <th>Quantity</th>
          <th>Total</th>
        </tr>
        </thead>
        <% current_user.orders.each do |order| %>
            <tr>
              <td><%= order.created_at.to_s(:short) %></td>
              <td><%=  %></td>
              <td> </td>
              <td><%= number_to_currency(order.total_price, :unit => "Â£") %></td>
            </tr>
        <% end %>
        <% if current_user.orders.empty? %>
            <tr>
              <td>No bookings found</td>
            </tr>
        <% end %>
        </table>
    <% end %>

    </table>
<% end  %>

