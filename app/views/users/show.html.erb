<%= form_for(@user) do |f| %>
<table style="float: left;" xmlns="http://www.w3.org/1999/html">
  <tr>
    <td class="th" colspan=2>Login Details</td>
  </tr>
  <tr>
    <% if @user.id %>
        <td><%= f.label :id %></td>
        <td><%= @user.id %></td>
    <% end %>
  </tr>
  <tr>
    <td><%= f.label :current_sign_in_at, "Sign in time" %></td>
    <td><%= @user.current_sign_in_at.nil? ? "Not signed in" :
                    @user.current_sign_in_at.strftime('%d-%b-%Y %H:%M:%S') %></td>
  </tr>
  <tr>
    <td><%= f.label :first_name, "First Name" %></td>
    <td><%= @user.first_name %></td>
  </tr>
  <tr>
    <td><%= f.label :last_name, "Last Name" %></td>
    <td><%= @user.last_name %></td>
  </tr>
  <tr>
    <td><%= f.label :email, "Email Address" %></td>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <td class="th" colspan=2>Roles and Privileges</td>
  </tr>
  <tr>
    <% if current_user.role? :administrator %>
        <% for role in Role.all %>
            <td><%= role.name %><%= check_box_tag "user[role_ids][]", role.id, @user.roles.include?(role), :disabled => true %></td>
        <% end %>
        </tr>
    <% end %>
    <tr>
    <td>

      <%= link_to 'Edit', edit_user_path(@user) %> |
      <%= link_to 'Back', usermanagement_path %>

    </td>
    </tr>

    </table>
<% end  %>

